<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.ham.len.humanresource.sign.SignatureDAO">

<select id="getDetail" resultType="SignatureVO" parameterType="SignatureVO">
   SELECT * FROM SIGNATURE
    WHERE SIGN_NO=#{signNo}
</select>

<insert id="setAdd" parameterType="SignatureVO">
INSERT INTO SIGNATURE
(SIGN_NO,EMPLOYEE_ID,SIGN_PATH,SIGN_NAME,SIGN_ORIGINAL_NAME,
REG_ID,REG_DATE,REG_MENU,MOD_ID,MOD_DATE,MOD_MENU)
VALUES
(#{signNo},#{employeeId},#{signPath},#{signName},#{signOriginalName},
#{regId},NOW(),#{regMenu},#{modId},NOW(),#{modMenu})
</insert>

 <!-- insert

