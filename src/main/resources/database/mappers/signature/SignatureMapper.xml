 <!-- update
 
 UPDATE 
    SET
		,MOD_ID=#{modId},MOD_DATE=NOW(),MOD_MENU=#{modMenu}
		WHERE 
 
  -->
  
<update id="setUpdate" parameterType="SignatureVO">
UPDATE SIGNATURE 
   SET SIGN_PATH=#{signPath},SIGN_NAME=#{signName},SIGN_ORIGINAL_NAME=#{signOriginalName}
	   ,MOD_ID=#{modId},MOD_DATE=NOW(),MOD_MENU=#{modMenu}
 WHERE SIGN_NO=#{signNo}
</update>

<delete id="setDelete" parameterType="SignatureVO">
DELETE FROM SIGNATURE
 WHERE SIGN_NO=#{signNo}
</delete>
 
</mapper>